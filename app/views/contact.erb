<div class='container main-content'>
  <div class='contact'>
    <p>Contact us at development@devbootcamp.com</p>
    <form action='/contact' method='post'>
      <% if authenticated? %>
      <label for='name'>Name</label><input type='text' readonly='true' name='name' value=<%= current_user.name%>>
      <label for='email'>Email</label><input type='text' readonly='true' name='email' value=<%=current_user.email%>>
      <% else %>
      <label for='name'>Name</label><input type='text' name='name'>
      <label for='email'>Email</label><input type='text' name='email'>
      <% end %>
      <label for='subject'>Subject</label><input type='text' name='subject'>
      <label for='body'>Body</label><textarea rows='10' name='body'></textarea>
      <input type='submit' value='Send'>
    </form>
  </div>
</div>
