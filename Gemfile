source 'https://rubygems.org'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'

# Use Thin for our web server
gem 'thin'

gem 'activesupport'
gem 'activerecord'

gem 'rake'

gem 'shotgun'
gem 'oauth2', '~> 0.8.0'
gem 'json'
gem 'omniauth'
gem 'omniauth-oauth2'
gem 'omniauth-dbc'
gem 'dbc-ruby'

group :test do
  gem 'faker'
  gem 'rspec'
  gem 'capybara'
  gem 'mail'
  gem 'launchy'
end

group :development, :test do
	gem 'pony'
end
